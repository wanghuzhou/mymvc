                <property name="druid.password" value="${jdbc.password}"/>
            </dataSource>-->
            <dataSource type="com.wanghz.mymvc.webtest.config.HikariDataSourceFactory"/>
        </environment>
    </environments>

    <mappers>
        <!--		<mapper resource="mapper/UserMapper.xml"/>-->
